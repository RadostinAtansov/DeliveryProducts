@model IEnumerable<ShowAllComponentsViewModel>

@{
    ViewData["Title"] = "View All Components";

    int count = 0;
}

<h1 style="text-align: center;">All Components</h1>

<form asp-controller="Storage" asp-action="ShowAllComponents" style="text-align: right">
    <p>
        <b>Search by Name:</b> <input type="text" name="search"/>
        <input type="submit" value="Search" />
   </p>
</form><br>

<table class="table table-hover">
  <thead>
    <tr class="bg-info">
      <th scope="col">No:</th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
      <th scope="col">BuyedTime</th>
      <th scope="col">Insignificant</th>
      <th scope="col">PlaceInStorageAndCity</th>
      <th scope="col">Comment</th>
      <th scope="col">Picture</th>
      <th scope="col">Modification</th>
    </tr>
  </thead>
  <tbody>
  @foreach (var item in Model)
  {
      count++;
      <tr>
        <th scope="row">@count</th>
        <td>@item.Name</td>
        <td>@item.Quantity</td>
        <td>@item.Price</td>
        <td>@item.BuyedTime</td>
        <td>@item.Insignificant</td>
        <td>@item.PlaceInStorageAndCity</td>
        <td>@item.Comment</td>
        <td>
            <a href="~/Images/@item.Picture">
                <img src="~/Images/@item.Picture" width="80" height="80">
            </a>
        </td>
            <td>
                <a href="">Details</a><br>
                <a asp-controller="Storage" asp-action="DeleteComponent" asp-route-id="@item.Id">Delete</a><br>
                <a href="">Edit</a>
            </td>
      </tr>
  }
  </tbody>

</table>