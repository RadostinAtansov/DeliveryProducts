@model AddBoughtToolViewModel

@{
    ViewData["Title"] = "AddBoughtTool";
}

<h1>AddBoughtTool</h1>

<h4>AddBoughtToolViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBoughtTool" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BoughtFrom" class="control-label"></label>
                <input asp-for="BoughtFrom" class="form-control" />
                <span asp-validation-for="BoughtFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeBought" class="control-label"></label>
                <input asp-for="TimeBought" class="form-control" />
                <span asp-validation-for="TimeBought" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeWhenCreated" class="control-label"></label>
                <input asp-for="TimeWhenCreated" class="form-control" />
                <span asp-validation-for="TimeWhenCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlaceInStorageAndCity" class="control-label"></label>
                <input asp-for="PlaceInStorageAndCity" class="form-control" />
                <span asp-validation-for="PlaceInStorageAndCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Picture" class="control-label"></label>
                <input asp-for="Picture" class="form-control" />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Insignificant" /> @Html.DisplayNameFor(model => model.Insignificant)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Add To Storage" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="_Layout">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
