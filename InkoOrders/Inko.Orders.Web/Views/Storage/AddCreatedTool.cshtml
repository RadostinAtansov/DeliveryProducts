@model AddCreatedByInkoViewModel

@{
    ViewData["Title"] = "Add Created Tool";
}

<h1>Add Created Tool</h1>

<form method="post">
    <div class="row">
        <div class="form-group">
            <label>Name</label>
            <input type="text" id="name" name="name" placeholder="component name..." ><br><br>
            <label>CreatedFrom</label>
            <input type="text" id="CreatedFrom" name="CreatedFrom" placeholder="tool is bought from..."><br><br>
            <label>Quantity</label>
            <input type="text" id="Quantity" name="Quantity" placeholder="component quantity..."><br><br>
            <label>Picture</label>
            <input type="text" id="Picture" name="Picture" placeholder="URL"><br><br>
            <label>PlaceInStorageAndCity</label>
            <input type="text" id="PlaceInStorageAndCity" name="PlaceInStorageAndCity"><br><br>
            <label>TimeWhenCreated</label>
            <input type="text" id="TimeWhenCreated" name="TimeWhenCreated"><br><br>
            <label>Comment</label><br><br>
            <textarea type="text" id="Comment" name="Comment" placeholder="Write some specifics..."></textarea><br><br>
            <input checked="checked" type="checkbox" id="Insignificant" name="Insignificant" value="true"/>
            <label for="Insignificant">In this Material Significant?</label><br><br>
        </div>
    </div>
    <button type="submit" value="submit">Submit</button>
</form>