@model AddComponentViewModel

@{
    ViewData["Title"] = "AddComponent";
}

<h1>AddComponent</h1>

<h4>AddComponentViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddComponent" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyedTime" class="control-label"></label>
                <input asp-for="BuyedTime" class="form-control" />
                <span asp-validation-for="BuyedTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlaceInStorage" class="control-label"></label>
                <input asp-for="PlaceInStorage" class="form-control" />
                <span asp-validation-for="PlaceInStorage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Picture" class="control-label"></label>
                <input asp-for="Picture" class="form-control" />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Insignificant" /> @Html.DisplayNameFor(model => model.Insignificant)
                </label>
            </div><br>
            <div class="form-group">
                <input type="submit" value="Add To Storage" class="btn btn-primary" />
            </div><br>
        </form>
    </div>
</div><br>

<a asp-action="">Back</a>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
